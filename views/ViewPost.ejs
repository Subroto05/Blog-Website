<%- include("partials/Header.ejs") %>
  
    <% blogPosts.forEach(post => { %>
      <article class="blog-post">
        <h2><%= post.title %></h2>
        <p><strong>By:</strong> <%= post.author %> | <%= post.date %></p>
        <p><%= post.content.substring(0, 150) %>... <a href="/posts/<%= post.id %>">Read more</a></p>
      </article>
    <% }); %>

